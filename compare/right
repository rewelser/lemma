const handleCreatePost = (
  title: string,
  body: string,
  relationships?: {
    type: PostRelationshipType;
    post: { id: number; title: string; author: string };
  }[]
) => {
  const newPost: PostType = {
    id: posts.length + 1,
    title,
    body,
    author: "currentuser",
    createdAt: new Date().toISOString(),
    comments: [],
    relationships,
  };

  setPosts([newPost, ...posts]);
};
